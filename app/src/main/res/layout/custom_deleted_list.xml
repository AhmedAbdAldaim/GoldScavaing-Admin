<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_7ssp"
            android:id="@+id/card"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:contentPadding="@dimen/_10sdp"
            android:foreground="?android:attr/selectableItemBackground"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name"
                                android:text="احمد محمد حسن علي"
                                android:drawableStart="@drawable/ic_pers"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_11ssp"
                                android:textAlignment="viewStart"
                                android:textColor="@color/blue"
                                />
                            <TextView
                                android:layout_width="@dimen/_7sdp"
                                android:layout_height="@dimen/_7sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:id="@+id/status"
                                android:gravity="center"
                                android:background="@drawable/background_color_statues"
                                android:layout_gravity="center"
                                android:textAlignment="viewEnd"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/phone"
                            android:text="099999999"
                            android:drawableStart="@drawable/ic_phon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/shop"
                            android:text="التجاني للذهب"
                            android:drawableStart="@drawable/ic_jo"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_11ssp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/blue"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/addeddatitle"
                                android:text="@string/addeddate"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/addeddate"
                                android:text="22-2-2019"
                                android:drawablePadding="@dimen/_5sdp"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/black1"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_3sdp"
                        android:id="@+id/delete"
                        android:drawableStart="@drawable/ic_deleted_recovery"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="@string/recovery"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/background_button_recovered" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>